@model IEnumerable<TripleProject.Areas.Admin.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="row pt-4">
    <div class="col-md-4">
        <h1 class="h3">Catalog</h1>

        @await Component.InvokeAsync("Catalogs")
    </div>

    <div class="col-md-8">
        @await Component.InvokeAsync("ProductsCarousel")

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-3">
                    <article class="card">
                        @if (item.Image != null)
                        {
                            <a asp-controller="Home" asp-action="ProductsSingle" asp-route-id="@item.Id">
                                <div class="square-image card-img-top" style="background-image: url(@item.Image.Path)"></div>
                            </a>
                        }

                        <div class="card-body">
                            <h3 class="h5"><a asp-controller="Home" asp-action="ProductsSingle" asp-route-id="@item.Id">@item.Title</a></h3>
                            <p>@item.Description</p>
                            <p class="text-red h5">@item.Price</p>
                        </div>
                    </article>
                </div>
            }
        </div>
    </div>
</div>
