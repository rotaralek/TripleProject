@model IEnumerable<TripleProject.Areas.Admin.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Products</h1>
</div>

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("Catalogs")
    </div>

    <div class="col-md-9">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-3">
                    <article class="card">
                        @if (item.Image != null)
                        {
                            <a asp-controller="Home" asp-action="ProductsSingle" asp-route-id="@item.Id">
                                <div class="square-image half card-img-top" style="background-image: url(@item.Image.Path)"></div>
                            </a>
                        }

                        <div class="card-body">
                            <h3><a asp-controller="Home" asp-action="ProductsSingle" asp-route-id="@item.Id">@item.Title</a></h3>

                            <p>@item.Description</p>
                            <p>@item.Price</p>
                        </div>
                    </article>
                </div>
            }
        </div>
    </div>
</div>
