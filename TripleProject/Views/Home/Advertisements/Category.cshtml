@model IEnumerable<TripleProject.Areas.Admin.Models.Advertisement>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Advertisements"];
}
<div class="row pt-4">
    <div class="col-md-4">
        <h1 class="h3">@SharedLocalizer["Categories"]</h1>
        @await Component.InvokeAsync("Categories")

        @await Component.InvokeAsync("Filter")
    </div>
    <div class="col-md-8">
        @await Component.InvokeAsync("AdvertisementsCarousel")
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-6 mb-3">
                    <article class="card">
                        @if (item.Image != null)
                        {
                            <a asp-controller="Home" asp-action="AdvertisementsSingle" asp-route-id="@item.Id">
                                <div class="square-image card-img-top" style="background-image: url(@item.Image.Path)"></div>
                            </a>
                        }
                        <div class="card-body">
                            <h3 class="h6 trancate"><a asp-controller="Home" asp-action="AdvertisementsSingle" asp-route-id="@item.Id">@item.Title</a></h3>
                            <p class="text-red h6">@item.Price @item.Currency</p>
                            <div class="date text-muted">
                                <i class="material-icons">access_time</i>
                                <time datetime="@item.DateTime">@item.DateTime</time>
                            </div>
                        </div>
                    </article>
                </div>
            }
        </div>
        @{
            int count = (int)ViewData["count"];
            int page = (int)ViewData["page"];
            decimal itemsPerPage = (int)ViewData["itemsPerPage"];
        }
        @await Component.InvokeAsync("Pagination", new { count, page, itemsPerPage })
    </div>
</div>
