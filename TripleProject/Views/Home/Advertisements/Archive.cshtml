@model IEnumerable<TripleProject.Areas.Admin.Models.Advertisement>

@{
    ViewData["Title"] = "Advertisements";
}

<div class="row pt-4">
    <div class="col-md-3">
        <h1 class="h3">Advertisements</h1>

        @await Component.InvokeAsync("Categories")
    </div>

    <div class="col-md-9">
        @await Component.InvokeAsync("AdvertisementsCarousel")

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-3">
                    <article class="card">
                        @if (item.Image != null)
                        {
                            <a asp-controller="Home" asp-action="AdvertisementsSingle" asp-route-id="@item.Id">
                                <div class="square-image card-img-top" style="background-image: url(@item.Image.Path)"></div>
                            </a>
                        }

                        <div class="card-body">
                            <h3 class="h5"><a asp-controller="Home" asp-action="AdvertisementsSingle" asp-route-id="@item.Id">@item.Title</a></h3>
                            <p>@item.Price</p>
                        </div>
                    </article>
                </div>
            }
        </div>
    </div>
</div>
