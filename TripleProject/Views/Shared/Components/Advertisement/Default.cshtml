@model TripleProject.Areas.Admin.Models.Advertisement

<article class="card">
    @if (Model.Image != null)
    {
        <a asp-controller="Home" asp-action="AdvertisementsSingle" asp-route-id="@Model.Id">
            <div class="square-image card-img-top" style="background-image: url(@Model.Image.Path)"></div>
        </a>
    }
    <div class="card-body">
        <h3 class="h6 trancate"><a asp-controller="Home" asp-action="AdvertisementsSingle" asp-route-id="@Model.Id">@Model.Title</a></h3>
        <p class="text-red h6">@String.Format("{0:### ### ### ###}", Model.Price) @Model.Currency</p>
        <div class="date text-muted">
            <i class="material-icons">access_time</i>
            <time datetime="@Model.DateTime">@Model.DateTime</time>
        </div>
    </div>
</article>