@model IEnumerable<TripleProject.Areas.Admin.Models.Product>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

<div class="owl-carousel mb-4" data-slides-per-line="1">
    @foreach (var item in Model)
    {
        string image = item.Image != null ? item.Image.Path : null;

        <div>
            <div class="square-image part-50" style="background-image: url(@image)"></div>
            <div class="card-img-overlay-bottom">
                <h3 class="h5"><a asp-controller="Home" asp-action="ProductsSingle" asp-route-id="@item.Id">@item.Title</a></h3>
                <p class="text-red h5">@String.Format("{0:### ### ### ###}", item.Price) @item.Currency</p>
            </div>
        </div>
    }
</div>