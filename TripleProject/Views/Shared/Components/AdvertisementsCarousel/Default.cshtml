@model IEnumerable<TripleProject.Areas.Admin.Models.Advertisement>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

<div class="owl-carousel owl-carousel-mono mb-4">
    @foreach (var item in Model)
    {
        string image = item.Image != null ? item.Image.Path : null;

        <div>
            <div class="square-image part-50" style="background-image: url(@image)"></div>
            <div class="card-img-overlay-bottom">
                <h3 class="h5"><a asp-controller="Home" asp-action="AdvertisementsSingle" asp-route-id="@item.Id">@item.Title</a></h3>
                <p class="text-red h6">@item.Price @item.Currency</p>
                <p class="date text-muted">
                    <i class="material-icons">access_time</i>
                    <time datetime="@item.DateTime">@item.DateTime</time>
                </p>
                <a asp-controller="Home" asp-action="AdvertisementsSingle" asp-route-id="@item.Id" class="btn btn-primary">@SharedLocalizer["Buy now"]</a>
            </div>
        </div>
    }
</div>
