@model TripleProject.Areas.Admin.Models.Product

@{
    ViewData["Title"] = "Create";
}

<div class="pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Create</h1>
</div>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ImageId" />
            <input type="hidden" asp-for="GalleryId" />

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <textarea asp-for="Text" class="form-control tinymce"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="form-group col-sm-6">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group col-sm-6">
                    <label asp-for="Currency" class="control-label"></label>
                    <select asp-for="Currency" class="form-control">
                        <option value="0">MDL</option>
                        <option value="1">EUR</option>
                        <option value="2">USD</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CatalogId" class="control-label"></label>
                <select asp-for="CatalogId" class="form-control" asp-items="ViewBag.CatalogId">
                    <option value="">None</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="AttributeId" class="control-label"></label>
                <select asp-for="AttributeId" class="form-control" asp-items="ViewBag.AttributeId">
                    <option value="">None</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Views" class="control-label"></label>
                <input asp-for="Views" class="form-control" readonly />
                <span asp-validation-for="Views" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-md-4">
        @await Component.InvokeAsync("Image", 0)

        @await Component.InvokeAsync("Gallery")
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

