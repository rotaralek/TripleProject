@model TripleProject.Areas.Admin.Models.Catalog
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["Delete"];
}

<div class="pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@SharedLocalizer["Delete"]</h1>
</div>

<h3>@SharedLocalizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@SharedLocalizer["Catalog"]</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Parent)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Parent.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@SharedLocalizer["Delete"]" class="btn btn-primary" /> |
        <a asp-action="Index">@SharedLocalizer["Back to List"]</a>
    </form>
</div>
