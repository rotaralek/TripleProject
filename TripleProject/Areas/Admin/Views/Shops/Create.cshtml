@model TripleProject.Areas.Admin.Models.Shop
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["Create"];
}

<div class="pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
</div>

<h4>@SharedLocalizer["Shop"]</h4>

<hr />
<div class="row">
    <div class="col-md-9">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ImageId" />
            <input type="hidden" asp-for="GalleryId" />
            <div class="row">
                <div class="col-md-9">
                    <div class="form-group">
                        <label asp-for="Slug" class="control-label"></label>
                        <input asp-for="Slug" class="form-control slug-field" />
                        <span asp-validation-for="Slug" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control slug-trigger" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Text" class="control-label"></label>
                        <textarea asp-for="Text" class="form-control tinymce"></textarea>
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-3">
                            <label asp-for="Location" class="control-label"></label>
                            <input asp-for="Location" class="form-control" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="Phone" class="control-label"></label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="WorkingHours" class="control-label"></label>
                            <input asp-for="WorkingHours" class="form-control" />
                            <span asp-validation-for="WorkingHours" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label asp-for="Views" class="control-label"></label>
                            <input asp-for="Views" class="form-control" readonly/>
                            <span asp-validation-for="Views" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="DateTime" class="control-label"></label>
                            <input asp-for="DateTime" class="form-control" readonly/>
                            <span asp-validation-for="DateTime" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="UserId" class="control-label"></label>
                            <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="@SharedLocalizer["Save"]" class="btn btn-primary" />
                    </div>
                </div>

                <div class="col-md-3">
                    
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-3">
        @await Component.InvokeAsync("Image", 0)
        @await Component.InvokeAsync("Gallery")
    </div>
</div>

<div>
    <a asp-action="Index">@SharedLocalizer["Back to List"]</a>
</div>

