@page
@model ExternalLoginsModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Manage your external logins"];
}

@Html.Partial("_StatusMessage", Model.StatusMessage)

@if (Model.CurrentLogins?.Count > 0)
{
    <h4>@SharedLocalizer["Registered Logins"]</h4>
    <table class="table">
        <tbody>
            @foreach (var login in Model.CurrentLogins)
            {
                <tr>
                    <td>@login.LoginProvider</td>
                    <td>
                        @if (Model.ShowRemoveButton)
                        {
                            <form id="remove-login" asp-page-handler="RemoveLogin" method="post">
                                <div>
                                    <input asp-for="@login.LoginProvider" name="LoginProvider" type="hidden" />
                                    <input asp-for="@login.ProviderKey" name="ProviderKey" type="hidden" />
                                    <button type="submit" class="btn btn-default" title="@SharedLocalizer["Remove this"] @login.LoginProvider @SharedLocalizer["login from your account"]">@SharedLocalizer["Remove"]</button>
                                </div>
                            </form>
                        }
                        else
                        {
                            @: &nbsp;
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@if (Model.OtherLogins?.Count > 0)
{
    <h4>@SharedLocalizer["Add another service to log in"].</h4>
    <hr />
    <form id="link-login-form" asp-page-handler="LinkLogin" method="post" class="form-horizontal">
        <div id="socialLoginList">
            <p>
                @foreach (var provider in Model.OtherLogins)
                {
                    <button id="link-login-button" type="submit" class="btn btn-default" name="provider" value="@provider.Name" title="@SharedLocalizer["Log in using your"] @provider.DisplayName account">@provider.DisplayName</button>
                }
            </p>
        </div>
    </form>
}
