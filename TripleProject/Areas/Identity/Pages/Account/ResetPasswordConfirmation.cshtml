@page
@model ResetPasswordConfirmationModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Reset password confirmation"];
}

<h2>@ViewData["Title"]</h2>
<p>
    @SharedLocalizer["Your password has been reset. Please"] <a asp-page="./Login">@SharedLocalizer["click here to log in"]</a>.
</p>
